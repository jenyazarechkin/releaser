<p id="notice"><%= notice %></p>
<h1>Listing Countries</h1>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td width="1%"><%= country.id %></td>
        <td><%= country.name %></td>
        <td width="1%"><%= link_to 'Show', country, class: 'btn btn-default btn-sm' %></td>
        <td width="1%"><%= link_to 'Edit', edit_country_path(country), class: 'btn btn-default btn-sm'  %></td>
        <td width="1%"><%= link_to 'Hide', country, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Country', new_country_path, class: 'btn btn-default' %>
