<p id="notice"><%= notice %></p>
<h1>Listing Steps</h1>
<table class="table">
  <thead>
  <tr>
    <th>#</th>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @steps.each do |step| %>
    <tr>
      <td width="1%"><%= step.id %></td>
      <td><%= step.name %></td>
      <td width="1%"><%= link_to 'Show', step, class: 'btn btn-default btn-sm' %></td>
      <td width="1%"><%= link_to 'Edit', edit_step_path(step), class: 'btn btn-default btn-sm' %></td>
      <td width="1%"><%= link_to 'Hide', step, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New Step', new_step_path, class: 'btn btn-default' %>