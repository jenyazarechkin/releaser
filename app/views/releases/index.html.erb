<p id="notice"><%= notice %></p>
<h1>Listing Releases</h1>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Released at</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td width="1%"><%= release.id %></td>
        <td><%= release.name %></td>
        <td><%= I18n.l release.released_at, format: :short %></td>
        <td><%= release.team.name %></td>
        <td width="1%"><%= link_to 'Show', release, class: 'btn btn-default btn-sm' %></td>
        <td width="1%"><%= link_to 'Edit', edit_release_path(release), class: 'btn btn-default btn-sm'  %></td>
        <td width="1%"><%= link_to 'Hide', release, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Release', new_release_path, class: 'btn btn-default btn-sm' %>
