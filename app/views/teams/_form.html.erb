<%= nested_form_for(@team) do |f| %>
  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>
      <ul>
        <% @team.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          Team
        </div>
        <div class="panel-body">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="panel-footer">
          <%= f.submit class: 'btn btn-default' %>
          <%= link_to 'Back', teams_path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          Team members
        </div>
        <div class="panel-body" id="team_members">
          <%= f.fields_for :team_members do |team_member| %>
            <div class="form-group">
              <div class="input-group">
                <%= team_member.text_field :name, class: 'form-control' %>
                <span class="input-group-btn">
                <%= team_member.link_to_remove 'Destroy', class: 'btn btn-default' %>
              </span>
              </div>
            </div>
          <% end %>
        </div>
        <div class="panel-footer">
          <%= f.link_to_add 'New Team Member', :team_members, :data => { :target => '#team_members' }, class: 'btn btn-default'  %>
        </div>
      </div>
    </div>
  </div>
<% end %>