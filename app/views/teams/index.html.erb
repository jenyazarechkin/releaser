<p id="notice"><%= notice %></p>
<h1>Listing Teams</h1>
<table class="table">
  <thead>
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Members names</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @teams.each do |team| %>
    <tr>
      <td width="1%"><%= team.id %></td>
      <td><%= team.name %></td>
      <td><%= team.members_names %></td>
      <td width="1%"><%= link_to 'Show', team, class: 'btn btn-default btn-sm' %></td>
      <td width="1%"><%= link_to 'Edit', edit_team_path(team), class: 'btn btn-default btn-sm' %></td>
      <td width="1%"><%= link_to 'Hide', team, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New Team', new_team_path, class: 'btn btn-default' %>
